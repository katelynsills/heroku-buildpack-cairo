#!/usr/bin/env bash

# Fail fast and fail hard.
set -eo pipefail

mkdir -p /tmp/cairo-1.15.6 \
    && wget -qO- --no-check-certificate https://cairographics.org/snapshots/cairo-1.15.6.tar.xz \
    | tar -xJC /tmp/ \
    && cd /tmp/cairo-1.15.6 \
    && ./configure \
    && make \
    && make install

export LD_LIBRARY_PATH=/usr/local/lib/:$LD_LIBRARY_PATH
